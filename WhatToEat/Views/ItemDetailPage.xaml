<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Recipes.Views.ItemDetailPage" Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Command="{Binding EditItemCommand}" />
    </ContentPage.ToolbarItems>
    <StackLayout Spacing="20" Padding="15">
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label VerticalOptions="Center" HorizontalOptions="Center" Text="{Binding RecipeName}" FontSize="Large" FontAttributes="Bold" IsVisible="{Binding RecipeNameVisible}"/>
            <Image Source="{Binding ImageUrl}" WidthRequest="300" HeightRequest="150" Aspect="AspectFill" IsVisible="{Binding ImageUrlVisible}" />
         </StackLayout>
        <ScrollView>
            <StackLayout>
                <Label Text="Ingredients:" TextDecorations="Underline" FontSize="Medium"/>
                <Label Text="{Binding Ingredients}" FontSize="Small" IsVisible="{Binding IngredientsVisible}"/>
                <Label Text="Recipe:" TextDecorations="Underline" FontSize="Medium" />
                <Label Text="{Binding RecipeBody}" FontSize="Small" IsVisible="{Binding RecipeBodyVisible}"/>
                <Label FormattedText="{Binding RecipeUrl}" FontSize="Small" IsVisible="{Binding RecipeUrlVisible}"/>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>