<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recipes.Views.RecipeSearchPage"
             xmlns:vm="clr-namespace:Recipes.ViewModels"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:Recipes.ViewModels"
             xmlns:model="clr-namespace:Recipes.Models">
    <ContentPage.BindingContext>
        <vm:RecipeSearchViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#E3307D</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid Margin="20,35,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*" />
            <ColumnDefinition Width="0.6*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="150" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        
        <Entry x:Name="searchEntry"
               Grid.ColumnSpan="2"
               Text="Macaroni" />
        <Button Grid.ColumnSpan="2"
                Grid.Row="1"
                Text="Find Recipe"
                Clicked="OnButtonClicked" />

        <CarouselView Grid.ColumnSpan="2"
                      Grid.Row="2"
                      BackgroundColor="Aqua"
                      ItemsSource="{Binding Hits}">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Recipe.RecipeName}" />
                        <Label Text="{Binding Recipe.RecipeBody}" />
                        <CollectionView ItemsSource="{Binding Recipe.Ingredients}" />
                    </StackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <Label Grid.Row="3"
               Text="Recipe Name:" />
        <Label Grid.Row="3"
               Grid.Column="1"
               Text="{Binding Hits[0].Recipe.RecipeName}" />            
        <Label Grid.Row="4"
               Text="Ingredients:" />
        <CollectionView Grid.Row="4"
               Grid.Column="1"
               ItemsSource="{Binding Hits[0].Recipe.Ingredients}" />
    </Grid>
</ContentPage>